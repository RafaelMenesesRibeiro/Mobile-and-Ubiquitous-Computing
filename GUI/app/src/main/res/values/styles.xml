<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActiveButton" parent="AppTheme">
        // State
        <item name="android:clickable">true</item>
        // Size
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">90dp</item>
        // Margins
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginRight">40dp</item>
        // Colors
        <item name="android:background">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        // Text
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="InactiveButton" parent="ActiveButton">
        // State
        <item name="android:clickable">false</item>
        // Colors
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainLabel" parent="AppTheme">
        // Size
        <item name="android:layout_width">415dp</item>
        <item name="android:layout_height">140dp</item>
        // Margins
        <item name="android:layout_marginTop">10dp</item>
        // Text
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">100sp</item>
    </style>

    <style name="MainTextInput" parent="AppTheme">
        // Size
        <item name="android:layout_width">365dp</item>
        <item name="android:layout_height">70dp</item>
        // Margins
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">22dp</item>
        // EMS
        <item name="android:ems">10</item>
        // Text
        <item name="android:textSize">40sp</item>
        // Input
        <item name="android:inputType">textPersonName</item>
    </style>

</resources>
